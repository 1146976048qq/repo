post_install () {
  echo
  echo "==> WeChat data will be put into ~/.local/lib/wine-wechat when needed."
  echo "==> run 'wechat --config' if you want to adjust DPI settings."
  echo
}

post_remove () {
  echo
  echo "==> You may want to remove the ~/.local/lib/wine-wechat directory."
  echo "==> Note that all your WeChat data are stored here."
  echo
}
