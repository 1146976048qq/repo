_name=asyncpg
pkgname=python-asyncpg
pkgver=0.21.0
pkgrel=1
pkgdesc="An asyncio PostgreSQL driver"
arch=(any)
url="https://github.com/MagicStack/asyncpg"
license=('Apache License, Version 2.0')
depends=('python' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/asyncpg-0.21.0.tar.gz")
sha256sums=('53cb2a0eb326f61e34ef4da2db01d87ce9c0ebe396f65a295829df334e31863f')

build() {
  cd "$srcdir/asyncpg-0.21.0"
  python3 setup.py build
}

package() {
  cd "$srcdir/asyncpg-0.21.0"
  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build

  # make sure we don't install annoying files
  local _site_packages=$(python -c "import site; print(site.getsitepackages()[0])")
  rm -rf "$pkgdir/$_site_packages/tests/"
}

