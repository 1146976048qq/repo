pkgname=python-nose-timer
_pkgname=nose-timer
pkgver=0.7.6
pkgrel=1
pkgdesc='Timer plugin for nosetests'
arch=(any)
url='https://github.com/mahmoudimus/nose-timer'
license=(MIT)
depends=(python-nose)
makedepends=(python-setuptools)
checkdepends=(
  'python-mock'
  'python-parameterized'
  'python-termcolor'
)
source=("https://github.com/mahmoudimus/nose-timer/archive/v${pkgver}.tar.gz")
sha512sums=('14924de8d1aeaf756706977388e6625f91a3c6261647a41ebffa6f2df24cc0d301f82dcf94604449b72530dd37d5ab1d0544ce2b58230f165c584664be7396a1')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py build
}

check() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  nosetests --verbosity 2 --with-coverage --cover-erase --cover-html --cover-package=nosetimer tests
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
