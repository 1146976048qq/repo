_name=aioxmpp
pkgname=python-aioxmpp
pkgver=0.11.0
pkgrel=1
pkgdesc="Pure-python XMPP library for asyncio"
arch=(any)
url="https://github.com/horazont/aioxmpp"
license=('LGPLv3+')
depends=('python-aiosasl' 'python-aioopenssl' 'python-babel' 'python-dnspython' 'python-lxml' 'python-multidict' 'python-sortedcollections' 'python-pyopenssl' 'python-pyasn1' 'python-pyasn1-modules' 'python-tzlocal')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/aioxmpp-0.11.0.tar.gz")
sha256sums=('63e5e133925e8a8e67f4deb9c5b68123f867fdec2747b57e8e83d09a655063cc')

build() {
  cd "$srcdir/aioxmpp-0.11.0"
  python3 setup.py build
}

package() {
  cd "$srcdir/aioxmpp-0.11.0"
  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build

  # make sure we don't install any world-writable or root-readable-only files
  # we shouldn't need to fix ownership as we extract tarballs as a non-root user
  # https://github.com/pypa/setuptools/issues/1328
  # https://github.com/LonamiWebs/Telethon/issues/1605
  chmod u=rwX,go=rX -R "$pkgdir"
  # make sure we don't install annoying files
  local _site_packages=$(python -c "import site; print(site.getsitepackages()[0])")
  rm -rf "$pkgdir/$_site_packages/tests/"
}

