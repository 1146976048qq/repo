_name=cli_helpers
pkgname=python-cli_helpers
pkgver=2.0.0
pkgrel=1
pkgdesc="Helpers for building command-line apps"
arch=(any)
url="https://github.com/dbcli/cli_helpers"
license=(BSD)
depends=('python' 'python-terminaltables' 'python-tabulate' 'python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/cli_helpers-2.0.0.tar.gz")
sha256sums=('4cbac29c98a39ad6bdd66fb1989abd1bcc4983ad4e687c0abda9fdd533e1758e')

build() {
  cd "$srcdir/cli_helpers-2.0.0"
  python3 setup.py build
}

package() {
  cd "$srcdir/cli_helpers-2.0.0"
  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build

  # make sure we don't install annoying files
  local _site_packages=$(python -c "import site; print(site.getsitepackages()[0])")
  rm -rf "$pkgdir/$_site_packages/tests/"
}

