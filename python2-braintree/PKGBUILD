# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=python2-braintree
_pkgname=braintree
pkgver=3.0.0
pkgrel=1
pkgdesc="Braintree Python Library"
arch=('any')
url="https://www.braintreepayments.com/docs/python"
license=('MIT')
makedepends=("python2-setuptools")
depends=('python2-requests')
source=("https://github.com/braintree/braintree_python/archive/${pkgver}.tar.gz")

package() {
  cd ${_pkgname}_python-$pkgver
  python2 setup.py install --root "${pkgdir}"

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha512sums=('71975dc595dc4b348da4bd47284c39b91fbc55345a1895b541c67ec6847634bc13c30a78cb3209fe8ca1aa8e707758cfaac037bc36ecd6e76681a5d8e4e01cf5')
