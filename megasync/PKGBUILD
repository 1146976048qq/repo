# Maintainer: Alfonso Saavedra "Son Link" <sonlink.dourden@gmail.com>
pkgname=megasync
pkgver=1.0.35
pkgrel=1
pkgdesc="Sync your files to your Mega account. Official app"
arch=('i686' 'x86_64')
url="https://mega.co.nz/#sync"
license=('custom:The Clarified Artistic License')
conflicts=('megatools')
depends=('openssl' 'c-ares' 'libgcrypt' 'crypto++' 'qt4' 'libpng' 'qtchooser' 'sqlite')
if [ "${CARCH}" = 'x86_64' ]; then
	ARCH=amd64
	md5sums=('ad0b2b79735482f316af15fa45c95038')
elif [ "${CARCH}" = 'i686' ]; then
	ARCH=i386
	md5sums=('26ec580f25adafeb34c16910f377b236')  
fi
source=("https://mega.co.nz/linux/MEGAsync/Debian_7.0/${ARCH}/${pkgname}_${pkgver}_${ARCH}.deb")
install="${pkgname}.install"
options=(!strip)
package (){
	cd "${srcdir}"
	pwd
	tar -xzf data.tar.gz -C ${pkgdir}
	rm -r ${pkgdir}/usr/share/doc
	mkdir -p ${pkgdir}/usr/lib
	ln -s /usr/lib/libcryptopp.so ${pkgdir}/usr/lib/libcrypto++.so.9
}
