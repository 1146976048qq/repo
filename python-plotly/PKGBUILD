_pkgname=plotly
pkgname=python-plotly
pkgver=1.9.9
pkgrel=1
pkgdesc="An interactive, browser-based charting library for python"
arch=('i686' 'x86_64')
url="https://plot.ly/python/"
license=('MIT')
depends=('python-requests' 'python-pytz')
makedepends=('git' 'python' 'python-setuptools')
source=("https://pypi.python.org/packages/source/p/plotly/plotly-${pkgver}.tar.gz")
md5sums=('7dc398b2f45589a4d2abc821f2b0249b')


build() {
  cd "$srcdir/$_pkgname-$pkgver"

  #[ -d build ] && rm -rf build
  #mkdir build
  #cd build

  #python config.py -auto
  python setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  python setup.py install --root="${pkgdir}" --prefix=/usr
}
