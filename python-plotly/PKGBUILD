_pkgname=plotly
pkgname=python-plotly
pkgver=1.9.12
pkgrel=1
pkgdesc="Python plotting library for collaborative, interactive, publication-quality graphs."
arch=('any')
url="https://plot.ly/python/"
license=('MIT')
depends=('python' 'python-requests' 'python-pytz' 'python-setuptools')
source=('https://pypi.python.org/packages/3a/77/54c4e1d7ee2319c55e0104543a9f8461036a39a06f0d94fd8a196939570e/plotly-1.9.12.tar.gz')
md5sums=('1b12b66d1729e8c2dcaebcb8764f164b')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  python3 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build
}

