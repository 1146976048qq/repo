pkgname=libudev0
pkgver=0.13.1
pkgrel=1
pkgdesc="Dynamic library to access udev device information, 0.x version."
arch=('x86_64')
license=('GPL')
depends=()
optdepends=()
conflicts=('libudev.so.0')
source=(
  libudev.so.0.13.1
)
md5sums=(
  'e288fbfca2ff2be174afe9bdf1dfe82d'
)

package(){
	mkdir -p ${pkgdir}/usr/lib
	install -Dm644 libudev.so.0.13.1 "$pkgdir/usr/lib/libudev.so.0"
}