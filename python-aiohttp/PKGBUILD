_pkgname=aiohttp
pkgname=python-aiohttp
pkgver=0.22.3
pkgrel=1
pkgdesc="http client/server for asyncio"
arch=('i686' 'x86_64')
url="https://github.com/KeepSafe/aiohttp/"
license=('Apache')
depends=('python' 'python-chardet' 'python-multidict')
makedepends=('cython' 'python-setuptools')
source=('https://pypi.python.org/packages/29/b7/f273c09b120ae84d96c52ec0ebcfd623c5bf7fb1f2469b5d5fdddfe7be41/aiohttp-0.22.3.tar.gz')
md5sums=('8c75aa7aad0c428a0dbed1380e9c0807')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  python3 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build
}

