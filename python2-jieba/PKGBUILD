_pkgname=jieba
pkgname=python2-$_pkgname
pkgver=0.36
pkgrel=1
pkgdesc="JieBa Chinese Words Segment Library based on HMM model for Python"
arch=('any')
url='https://github.com/fxsjy/jieba'
license=('MIT')
depends=('python2')
source=("http://pypi.python.org/packages/source/j/$_pkgname/$_pkgname-$pkgver.zip")

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  python2 setup.py install -O1 --root="$pkgdir"
}

sha512sums=('d281e8a7e2672a132a766291fa8dd61e8a37bb21bde1c7c2165bcd96b3e50f96950995c3ed745910ec38747f2557dcfb42e4d4d777cbbc387eb0934e9e46568e')
