# ALARM: Kevin Mihelich <kevin@archlinuxarm.org>
#  - build v5 with system libatomic_ops

pkgname=libunwind-git
pkgver=1.2.rc1.125.gab39ae9
pkgrel=3
pkgdesc='Portable and efficient C programming interface (API) to determine the call-chain of a program'
arch=('i686' 'x86_64' 'armv7h' 'aarch64')
url='http://www.nongnu.org/libunwind/'
license=('GPL')
depends=('glibc' 'xz')
makedepends=('git')
source=('git://git.savannah.gnu.org/libunwind.git'
        0003-Prefer-EXTBL-unwinding-on-ARM.patch
        0005-dwarf-Fix-incorrect-cfi-execution.patch)
md5sums=('SKIP'
         '148852d93dc2e2a85ac167de707353f3'
         '96418814c394e837daadd9dd211f575d')
options=('debug' '!strip')
provides=(libunwind)
conflicts=(libunwind)

pkgver() {
  cd libunwind

  git describe --tags | sed 's/^v//;s/-/./g'
}

prepare() {
  cd libunwind

  patch -Np1 < ../0003-Prefer-EXTBL-unwinding-on-ARM.patch
  patch -Np1 < ../0005-dwarf-Fix-incorrect-cfi-execution.patch
}

build() {
  cd libunwind

  autoreconf -fi
  [[ $CARCH == "arm" ]] && LDFLAGS+=" -latomic_ops" && CFLAGS+=" -DAO_USE_PTHREAD_DEFS=1"

  ./configure CFLAGS="$CFLAGS -U_FORTIFY_SOURCE" --prefix=/usr
  make
}

# check() {
#   cd libunwind

#   # This function is ``supposed'' to fail. Upstream know, but haven't fixed it.
#   make check || return 0
# }

package() {
  cd libunwind

  make DESTDIR="$pkgdir/" install
  cat >> "$pkgdir/usr/include/libunwind.h" <<EOF
#ifndef JL_UNW_HAS_FORMAT_IP
#define JL_UNW_HAS_FORMAT_IP 1
#endif
EOF
}
