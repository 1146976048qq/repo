# Maintainer: Moritz Lipp <mlq@pwmt.org>
pkgname=libunwind-git
pkgver=1.2.rc1.1.gbc8698f
pkgrel=7
pkgdesc="Portable and efficient C programming interface (API) to determine the call-chain of a program"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/libunwind/"
license=('GPL')
makedepends=('git' 'texlive-core')
depends=('glibc')
provides=('libunwind')
conflicts=('libunwind')

source=("${pkgname}::git+git://git.sv.gnu.org/libunwind.git")
sha1sums=('SKIP')

build() {
  cd $pkgname

  autoreconf -i
  ./configure CFLAGS="$CFLAGS -U_FORTIFY_SOURCE" --prefix=/usr
  make
}

check() {
  cd $pkgname
  PATH=/usr/bin:$PATH make check || return 0
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}

pkgver() {
  cd $pkgname

  git describe --long --tags | sed -e 's/-/./g' -e 's/^[^0-9]//'
}
