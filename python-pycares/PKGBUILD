_pkgname=pycares
pkgname=python-pycares
pkgver=2.3.0
pkgrel=2
pkgdesc="Python interface for c-ares"
arch=('x86_64' 'i686')
url="http://github.com/saghul/pycares"
license=('(FIXME)')
depends=('python' 'c-ares' 'python-setuptools')
source=('https://files.pythonhosted.org/packages/89/5c/3a7e1a52d6abb52b9ca1a56d2df699936e89d8b98f75cfd60d03363e7c10/pycares-2.3.0.tar.gz')
md5sums=('74893b2b380fbb45329a406ae4b1ae89')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  LANG=en_US.UTF-8 python3 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  LANG=en_US.UTF-8 python3 setup.py install --root=$pkgdir --optimize=1 --skip-build
}

