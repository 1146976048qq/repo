# Maintainer: Marcin Kulik <m@ku1ik.com>

pkgname=asciinema
pkgver=0.9.9
pkgrel=1
pkgdesc="Record and share your terminal sessions, the right way"
arch=('x86_64' 'i686' 'arm')
url="https://asciinema.org/"
license=('GPLv3')
if [ "$CARCH" = "i686" ]; then
  _PKGARCH=386
  sha1sums=('3d55788c1307a6bdcbc01082bed361ac1a96505e')
elif [ "$CARCH" = "arm" ]; then
  _PKGARCH=arm
  sha1sums=('d9fcd1e62f19c0e7e148324c8d6aa627784e6a6f')
else
  _PKGARCH=amd64
  sha1sums=('5639dea31a5e71b64b00b1b5cfc492d23006efc4')
fi
source=("https://github.com/asciinema/asciinema-cli/releases/download/v${pkgver}/${pkgname}-${pkgver}-linux-${_PKGARCH}.tar.gz")

package() {
  cd ${pkgname}-${pkgver}-linux-${_PKGARCH}

  install -Dm755 ${pkgname} "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
