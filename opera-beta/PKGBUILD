# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=opera-beta
pkgver=27.0.1689.33
pkgrel=3
pkgdesc='A fast and secure web browser and Internet suite - beta stream'
arch=('x86_64')
url='http://www.opera.com/browser/'
license=('custom:opera')
depends=('alsa-lib' 'nss' 'gtk2' 'gconf' 'libxss' 'libxtst' 'desktop-file-utils')
optdepends=('ffmpeg: HTML5 H264 and mp3 playback')
install=opera.install
options=(!strip)
source=("http://get.geo.opera.com/pub/${pkgname}/${pkgver}/linux/${pkgname}_${pkgver}_amd64.deb")
# alternative download
#source=("ftp://ftp.opera.com/pub/${pkgname}/${pkgver}/linux/${pkgname}_${pkgver}_amd64.deb")
#source=("http://deb.opera.com/${pkgname}/pool/non-free/o/${pkgname}/${pkgname}_${pkgver}_amd64.deb"
sha256sums=('b95e8c61c250c5c0474724737734f17d63e3252329c41c3d2959db8cb5e905bc')

prepare() {
	cd ${srcdir}/

	# this is nested archive, so extract the inner tarball
	tar xJf data.tar.xz

	# fix opera to use libudev.so.1
	sed -i -e 's/libudev.so.0/libudev.so.1/g' \
		usr/lib/x86_64-linux-gnu/opera-beta/opera-beta
}

package() {
	cd ${srcdir}/

	# copy to pkgdir
	cp -a usr/ "${pkgdir}/"

	# ffmpeg compatibility symlinks
	#install -d -m0755 "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/lib/"
	#ln -s ../../../libavcodec.so.56 "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/lib/libavcodec.so.55"
	#ln -s ../../../libavformat.so.56 "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/lib/libavformat.so.55"
	#ln -s ../../../libavutil.so.54 "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/lib/libavutil.so.52"

	# set suid bit for Opera sandbox
	chmod 4755 "${pkgdir}/usr/lib/x86_64-linux-gnu/opera-beta/opera_sandbox"
}

