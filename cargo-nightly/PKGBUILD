# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.24.0_20171129
pkgrel=1
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
validpgpkeys=('108F66205EAEB0AAA8DD5E1C85AB96E6FA1BE5FE')
source=(https://static.rust-lang.org/dist/2017-12-01/cargo-nightly-x86_64-unknown-linux-gnu.tar.xz https://static.rust-lang.org/dist/2017-12-01/cargo-nightly-x86_64-unknown-linux-gnu.tar.xz.asc)
sha256sums=(bb4cacf6101f8435a3d63b566bd6f924f87dcf9e53946ce4e5aa40a612b5b752 SKIP)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.24.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

