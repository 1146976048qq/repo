# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.23.0_20170901
pkgrel=1
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
validpgpkeys=('108F66205EAEB0AAA8DD5E1C85AB96E6FA1BE5FE')
source=(https://static.rust-lang.org/dist/2017-09-03/cargo-nightly-x86_64-unknown-linux-gnu.tar.xz https://static.rust-lang.org/dist/2017-09-03/cargo-nightly-x86_64-unknown-linux-gnu.tar.xz.asc)
sha256sums=(62643d336df57bdc7751fad88f9ca6b46266f5a363cc214c5fdf878e4b37bd7d SKIP)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.23.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

