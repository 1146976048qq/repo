# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.19.0_20170323
pkgrel=1
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
source=(https://static.rust-lang.org/dist/2017-03-30/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz)
sha256sums=(1829f2b7d38837c04cdb5a9ecdf218240626319ce260eaf95487f36105f50bf7)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.19.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

