# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.21.0_20170713
pkgrel=1
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
validpgpkeys=('108F66205EAEB0AAA8DD5E1C85AB96E6FA1BE5FE')
source=(https://static.rust-lang.org/dist/2017-07-21/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz https://static.rust-lang.org/dist/2017-07-21/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz.asc)
sha256sums=(c0a90f4b074176dea392509f65df4e02d1cdc4e1a78bc91c2f8383968eeb2f96 SKIP)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.21.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

