# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.18.0_20170303
pkgrel=3
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
source=(https://static.rust-lang.org/dist/2017-03-04/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz)
sha256sums=(ed0e282fb04e396e1670ef8777bb072930f1ce2866daab0aa4e1c46d2d3d2d9e)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.18.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

