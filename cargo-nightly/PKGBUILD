# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.21.0_20170702
pkgrel=1
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
source=(https://static.rust-lang.org/dist/2017-07-03/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz)
sha256sums=(a1cc1c1e2a73155a49d8ba7ccbbe282f673bedf54ccd1bca5c4271485d6671c7)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.21.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

