_pkgname=fuocore
pkgname=python-fuocore
pkgver=2.3a0
pkgrel=1
pkgdesc="feeluown core"
arch=('any')
url="https://github.com/cosven/feeluown-core"
license=('MIT')
depends=('python' 'mpv' 'python-beautifulsoup4' 'python-marshmallow' 'python-pycrypto' 'python-requests' 'python-mutagen' 'python-fuzzywuzzy' 'python-setuptools')
_name=${pkgname#python-}
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${pkgver}.tar.gz")
md5sums=('f7f126d608efc798dff0d621c0e008a9')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  LANG=en_US.UTF-8 python3 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  LANG=en_US.UTF-8 python3 setup.py install --root=$pkgdir --optimize=1 --skip-build
}

