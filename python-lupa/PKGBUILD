_pkgname=lupa
pkgname=python-$_pkgname
pkgver=1.0b1
pkgrel=1
pkgdesc="Python wrapper around Lua and LuaJIT"
arch=('any')
url="https://github.com/scoder/lupa"
license=('MIT')
depends=('python' 'luajit')
source=('https://pypi.python.org/packages/source/l/lupa/lupa-1.0b1.tar.gz')
md5sums=('8ae6de8db76ea3f71609ee33cfd91875')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  python3 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build
}

# vim:set sw=2 et:
